
<link href="./css/adminSWDash.min copy.css" rel="stylesheet">

<i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
<i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
</div>
</header>
<div class="container body">
<div class="main_container">
<div class="col-md-12 col-sm-12">
  <div class="x_panel">
    <div class="x_content">
      <section></section>
      <% events.forEach((event, index) => { %>
        <div class="row">
          <div class="col-sm-12">
            <div class="card">
              <div class="row no-gutters">
                <div class="col-md-12">
                  <img src="<%= event.poster_event %>" class="card-img" alt="Image">
                </div>
                <div class="col-md-8">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <%= event.nama_event %>
                    <div>
                      <form action="/verif/<%= event.id %>" method="post">
                        <button name="status" value="PENDING" class="btn btn-secondary">PENDING</button>
                        <button name="status" value="REJECTED" class="btn btn-danger">REJECTED</button>
                        <button name="status" value="ACCEPTED" class="btn btn-success ml-auto">ACCEPTED</button>
                      </form>
                    </div>
                  </div>
                  <div class="card-body">
                    <p class="desCard" style="color: grey; word-wrap: break-word">
                      <%= event.deskripsi_event %>
                    </p>
                    <button class="btn btn-secondary"><%= event.penyelenggara_event %></button>
                    <button class="btn btn-secondary" data-toggle="modal" data-target="#klasTim<%= index %>">Klasifikasi Tim</button>
                    <button class="btn btn-secondary" data-toggle="modal" data-target="#benefit<%= index %>">Benefit</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="klasTim<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Klasifikasi Komite</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%= event.klasifikasi_divisi %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="benefit<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Benefit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%= event.benefit_event %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>
</div>
</div>
<script src="./js/bootstrap.bundle.min.js"></script>
<script src="./js/adminSWDash.js"></script>
