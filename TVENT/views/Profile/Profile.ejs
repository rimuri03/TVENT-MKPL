<link href="css/Profile.css" rel="stylesheet">   
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-2 mt-1">
                <div class="card sidebar">
                    <div class="card-body">
                        <img src="img/Profile.png" class="rounded-circle" width="150" style="margin-top: 100px;">
                        <div class="mt-3">
                            <h2><%= user.nama_depan, + user.nama_belakang %></h2>
                            <a id="openLogoutModal" href="#">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="card content" style="margin-top: 100px;">
                
                    <h1 class="m-3 pt-3">Account</h1>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <h5>Full Name</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                               <h4><%= user.nama_depan, + user.nama_belakang %></h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>NIM</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <h4><%= user.nim %></h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>Fakultas</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <h4><%= user.fakultas %></h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>Prodi</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <h4><%= user.program_studi %></h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>Email</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <h4><%= user.email %></h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-3">
                                <h5>Phone</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                                <h4><%= user.phone %></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="logoutModal modal">
        <div>
            <form class="modal-content" action="/logout" method="post">
                <p>Anda yakin ingin logout?</p>
                <div class="row">
                <div class="cancelButton">Cancel</div>
                <button class="yesButton">YES</button>
            </form>
        </div>
    </div>
</div>

<script src="js/Profile.js"></script>
