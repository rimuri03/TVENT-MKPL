<!-- views/index.ejs -->

<link href="/css/P_Event.css" rel="stylesheet">
<section id="hero" class="hero">
    <div class="container position-relative">
      <div class="row gy-5" data-aos="fade-in">
        <div class="col-lg-6 order-1 order-lg-2">
          <img src="./img/sddefault.j pg" class="img-fluid" alt="yaah belum muncul" data-aos="zoom-out" data-aos-delay="100">
        </div>
        <div class="col-lg-6 order-1 order-lg-2 d-flex flex-column justify-content-center text-center text-lg-start">
          <h2><%= event.nama_event %></h2>
          <p><%= event.deskripsi_event %></p>
          <div class="d-flex justify-content-center justify-content-lg-start">
          </div>
        </div>
      </div>

      <div class="icon-boxes position-relative">
        <div class="container position-relative">
              </div>
          <div class="row row-cols-3 gy-5 mt-3">
            
            <% event.klasifikasi_divisi.split(", ").forEach((divisi) => { %>
            <!-- Menampilkan data event dari server-side -->
            <div class="col-lg-3 col-md-10" data-aos="fade-up" data-aos-delay="100">
              <div class="icon-box">
                <h4 class="title"><a href="/<%= eventId %>/join-event/<%= divisi %>" class="stretched-link"><%= divisi %></a></h4>
              </div>
            </div>
            <!-- Akhir dari looping -->
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section></section>

<script src="./js/mainP_event.js"></script>
